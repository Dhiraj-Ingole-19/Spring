<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="paddr" class="PerAddress" scope="singleton">
 
 <property name="city" value="Pune" ></property>
 <property name="state" value="Maharashtra " ></property>

</bean>

<bean id="taddr" class="TempAddress" scope="singleton">
 
 <property name="city" value="Pune" ></property>
 <property name="state" value="Maharashtra " ></property>

</bean>

<bean id="oaddr" class="OfficeAddress" scope="singleton">
 
 <property name="city" value="digras" ></property>
 <property name="state" value="Maharashtra " ></property>

</bean>
<bean class="Employee" scope="singleton" autowire="byType">

 <property name="eid" value="101" ></property>
 <property name="ename" value="Dhiraj " ></property>
 <property name="esal" value="20000" ></property>

 

</bean>

 </beans> 